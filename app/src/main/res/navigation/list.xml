<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    app:startDestination="@id/fragmentList">



    <fragment
        android:id="@+id/fragmentList"
        android:name="com.papum.homecookscompanion.view.list.FragmentList"
        android:label="@string/bottom_nav_item_text_list"
        tools:layout="@layout/page_fragment_list" >
        <action
            android:id="@+id/action_fragmentList_to_fragmentEditFood"
            app:destination="@id/fragmentEditFood"
            app:popUpTo="@id/fragmentList"
            />
    </fragment>

    <fragment
        android:id="@+id/fragmentEditFood"
        android:name="com.papum.homecookscompanion.view.edit.food.FragmentEditFood"
        android:label="FragmentEditFood"
        tools:layout="@layout/fragment_edit_food"
        >
        <argument
            android:name="foodId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_fragmentEditFood_to_fragmentMap"
            app:destination="@id/fragmentMap"
            app:popUpTo="@id/fragmentEditFood"
            />
    </fragment>

    <fragment
        android:id="@+id/fragmentMap"
        android:name="com.papum.homecookscompanion.view.maps.FragmentMapShops"
        android:label="FragmentMapShops"
        tools:layout="@layout/fragment_map_shops"
        />

</navigation>