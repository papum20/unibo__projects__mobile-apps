<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/recycler_card_products_layout_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:srcCompat="@android:drawable/ic_menu_agenda" />

            <TextView
                android:id="@+id/recycler_card_products_type"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:text="@string/placeholder_product_type"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/recycler_card_products_text"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/placeholder_product_text"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recycler_card_products_layout_collapse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/recycler_card_products_btn_addList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recycler_card_products_btn_addList"
                android:visibility="visible" />

            <Button
                android:id="@+id/recycler_card_products_btn_addInventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recycler_card_products_btn_addInventory" />

            <Button
                android:id="@+id/recycler_card_products_btn_addPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recycler_card_products_btn_addPlan" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>